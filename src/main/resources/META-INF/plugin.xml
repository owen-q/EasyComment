<idea-plugin>
    <id>io.owen.plugin.easycomment</id>
    <name>EasyComment</name>
    <vendor email="owen.q.dev@gmail.com" url="https://github.com/owen-q/EasyComment">owen</vendor>

    <description><![CDATA[
    <strong>Easy Comment</strong><br>
    You can write comments using dynamic variables more easier<br>
    You can use other variable in your existed LiveTemplate or custom comment formats such as git author name, current branch name<br>
    <em>Visit github repository for more</em>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <defaultLiveTemplatesProvider implementation="io.owen.plugin.easycomment.GitBranchTemplateProvider"/>
        <liveTemplateContext implementation="io.owen.plugin.easycomment.GitBranchContext"/>
        <liveTemplateMacro implementation="io.owen.plugin.easycomment.macro.GitBranchMacro" />
    </extensions>

    <actions>
        <group id="gitbranch.Menu" class="io.owen.plugin.easycomment.popup.GitDynamicBranchGroup" popup="true" text="GitTemplate">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <action id="io.owen.plugin.easycomment.popup.GitBranchAction" class="io.owen.plugin.easycomment.popup.GitBranchAction" text="Test Action">
            <add-to-group group-id="gitbranch.Menu" anchor="last"/>
        </action>

        <action id="io.owen.plugin.easycomment.GitBranchPopupAction" class="io.owen.plugin.easycomment.GitBranchPopupAction"
                text="Show branch list"
                popup="true"
                description="Show branch list">
        </action>

        <action id="io.owen.plugin.easycomment.CommentPopupAction" class="io.owen.plugin.easycomment.CommentPopupAction"
                text="Write comment"
                popup="true"
                description="Write formatted comments"
        >

            <keyboard-shortcut first-keystroke="control command /" keymap="$default"></keyboard-shortcut>
        </action>
    </actions>





</idea-plugin>